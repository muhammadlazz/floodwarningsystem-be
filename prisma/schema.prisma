generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Fix: This correctly references the Agency enum below
  agency    Agency?  
  role      Role     @default(ADMIN)

  @@map("users")
}

model FloodAlert {
  id          Int      @id @default(autoincrement())
  location    String
  waterLevel  Float
  severity    String
  status      String   @default("active")
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("flood_alerts")
}

model Feedback {
  id          Int      @id @default(autoincrement())
  name        String
  email       String
  description String
  whatsapp    String
  createdAt   DateTime @default(now())

  @@map("feedbacks")
}

enum Agency {
  BBWS
  BMKG
  BPBD
  SYSTEM
}

enum Role {
  SUPER_ADMIN
  MASTER_ADMIN
  ADMIN
}