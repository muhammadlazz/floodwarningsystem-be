generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(ADMIN)
  agency    Agency?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  SUPER_ADMIN
  MASTER_ADMIN
  ADMIN
}

enum Agency {
  BBWS
  BMKG
  BPBD
  SYSTEM
}

model FloodAlert {
  id          Int      @id @default(autoincrement())
  location    String
  waterLevel  Float
  severity    String
  status      String   @default("active")
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}